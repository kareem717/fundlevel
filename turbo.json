{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "cache": false,
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        "dist/**/*",
        ".next/**",
        "!.next/cache/**",
        "bin/*"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "build",
        "^build"
      ]
    },
    "install": {
      "cache": false,
      "dependsOn": [
        "^install"
      ]
    },
    "test": {
      "cache": false,
      "dependsOn": [
        "^test"
      ]
    }
  }
}