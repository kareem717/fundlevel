{
	"extends": "@fundlevel/typescript-config/nextjs.json",
	"compilerOptions": {
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"],
			"@fundlevel/ui/*": ["../../packages/ui/src/*"]
		},
		"strict": true
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"next-env.d.ts",
		"next.config.js",
		".next/types/**/*.ts",
		"src/middleware.ts",
		"src/app/(core)/company/[id]"
	],
	"exclude": ["node_modules"]
}
