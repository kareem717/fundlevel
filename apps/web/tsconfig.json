{
  "extends": "@fundlevel/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@fundlevel/web/*": [
        "./src/*"
      ],
      "@fundlevel/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@fundlevel/api/*": [
        "../../apps/api/src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "declaration": false,
    "declarationMap": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}