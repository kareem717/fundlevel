{
	"compilerOptions": {
		"verbatimModuleSyntax": true,
		"strict": true,
		"skipLibCheck": true,
		"target": "ESNext",
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"baseUrl": "./",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"paths": {
			"@fundlevel/api/*": ["./src/*"],
			"@fundlevel/db/*": ["../../packages/db/src/*"]
		},
		"types": ["bun-types"],
		"composite": true
	},
	"exclude": ["node_modules"],
	"include": ["src/**/*.ts", "../../packages/db/src/**/*.ts"]
}
