{
	"compilerOptions": {
		"verbatimModuleSyntax": true,
		"strict": true,
		"skipLibCheck": true,
		"target": "ESNext",
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"baseUrl": "./",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"paths": {
			"@fundlevel/api/*": ["./src/*"],
			"@fundlevel/db/*": ["../../packages/db/src/*"],
			"@fundlevel/documents/*": ["../../packages/documents/src/*"]
		},
		"types": ["bun-types"],
		"composite": true
	},
	"exclude": ["./node_modules"],
	"include": [
		"src/**/*.ts",
		"../../packages/db/src/**/*.ts",
		"../../packages/documents/src/**/*.ts"
	]
}
