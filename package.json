{
	"name": "fundlevel",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"check": "biome check --write .",
		"prepare": "husky",
		"dev": "turbo dev",
		"build": "turbo build",
		"format": "biome format --write .",
		"lint": "turbo lint && manypkg check",
		"typecheck": "turbo typecheck",
		"clean-all": "find . -type d -name node_modules -o -name dist -o -name .turbo -o -name .next -o -type f -name tsconfig.tsbuildinfo -o -name bun.lock -name .wrangler -name .nitro | xargs rm -rf",
		"check-types": "turbo check-types",
		"cf-typegen": "turbo cf-typegen --filter='./apps/*'",
		"dev:web": "turbo -F @fundlevel/web dev",
		"dev:api": "turbo -F @fundlevel/api dev",
		"dev:landing": "turbo -F @fundlevel/landing dev",
		"db:push": "turbo -F @fundlevel/db db:push",
		"db:studio": "turbo -F @fundlevel/db db:studio",
		"db:generate": "turbo -F @fundlevel/db db:generate",
		"db:migrate": "turbo -F @fundlevel/db db:migrate",
		"db:start": "turbo -F @fundlevel/db db:start",
		"db:stop": "turbo -F @fundlevel/db db:stop",
		"db:restart": "turbo -F @fundlevel/db db:restart",
		"db:status": "turbo -F @fundlevel/db db:status",
		"db:reset": "turbo -F @fundlevel/db db:reset"
	},
	"dependencies": {},
	"devDependencies": {
		"@biomejs/biome": "^2.0.6",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.2",
		"turbo": "^2.5.4"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write"
		]
	},
	"packageManager": "bun@1.2.12"
}
